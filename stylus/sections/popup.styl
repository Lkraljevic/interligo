/* POPUP.STYL ================================ */

.popup
    position: fixed
    top: 0
    bottom: 0
    right: 0
    left: 0
    width: 100%
    height: 100%
    flex-center()
    background: colorBlack06
    z-index: 100
    display: none

    &.active
        flexbox()


    .dialog
        background: colorWhite
        box-shadow(0 0 20px colorBlack)
        width: 300px
        height: 200px

        .dialog__close
            flexbox()
            justify-content: flex-end
            align-items: center

            .btn-close
                flexbox()
                flex-center()
                font-size: 20px
                width: 30px
                height: 30px
                margin: 5px
                cursor: pointer
                transition(.3s)
                color: colorGray03

                &:hover
                    color: colorGray

        .dialog__wrap
            flexbox()
            flex-flow: column nowrap
            padding: 0 30px 30px 30px

        
        .dialog__desc
            color: colorBlue
            font-size: 16px
            font-weight: 100
        
        .dialog__input input
            width: 100%
            margin: 0
            box-sizing()
            padding: 5px
            outline: none
            border: 1px solid colorGray03
            margin: 20px 0
            font-size: 14px
            font-weight: 100

        .dialog__button
            text-align: center
            margin-top: 6px




