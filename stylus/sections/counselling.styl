/* COUNSELLING.STYL ================================ */

#counselling .counselling-wrap
    padding: 50px 0
    

#counselling .pricelist
    flexbox()
    flex-flow: column nowrap
    margin-bottom: 50px

    h3
        margin-bottom: 20px


    /* Price ============ */
    .price
        flexbox()
        flex-flow: column nowrap
        margin-bottom: 30px

    
    .price .price__row
        flexbox()
        flex-flow: row nowrap
        align-items: center
        
        .price__name,
        .price__price
            font-size: 14px
            font-weight: 400

        .price__name
            color: colorDarkGray
            /*text-transform: uppercase */
            max-width: 500px

        .price__line
            flex-grow: 1
            border-bottom: 1px dotted colorGray03
            box-sizing()
            margin: 0 20px

        .price__price
            color: colorBlue
            width: 200px
            text-align: left


    .price__desc,
    .price__note
        font-size: 12px
        color: colorGray
        width: 60%




    






