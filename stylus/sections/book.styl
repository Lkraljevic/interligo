/* BOOK.STYL ================================ */

/* overwtite */
#pf-stage
    background: colorBlue !important

#pageflip
    flex-grow: 1
    height: 100vh


.book-wrap
    flexbox()
    flex-flow: row nowrap
    background: colorBlue


/* Bookshelf ================ */
#bookselector
    flexbox()
    flex-flow: column nowrap
    flex-center()
    width: 280px
    flex-shrink: 0

    ul.shelf
        padding-bottom: 30px

    
    ul.shelf::after
        display: block
        content: ''
        width: 260px
        height: 40px
        background: url(../img/bookshelf2.png) no-repeat center
        background-size: 260px

    .shelf li
        display: inline-block
        width: 100px
        height: 150px
        margin: 0 10px -20px 10px
        background: url(../img/book.png) no-repeat bottom
        background-size: 80px
        transition(1s)
        color: colorWhite

        &:hover
            transform-scale(1.1)




/* LAST PAGE ==================== */

.last-page
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    background: colorWhite !important
    box-sizing()
    padding: 30px

    .last-page-wrap
        text-align: center
        font-size: 16px
        font-weight: 300




/* LAST PAGE ==================== */

.newsletter
    position: absolute
    top: 40px
    width: 250px
    z-index: 10

    .newsletter__text
        color: colorWhite
        font-size: 14px
        font-weight: 100
        margin-bottom: 10px

    .newsletter__input
        & input
            outline: none
            box-sizing()
            padding: 5px

        & input[type="text"]
            background: colorWhite
            border: 1px solid colorWhite
            color: colorGray
            width: 180px
            margin-right: 5px
        
        & input[type="button"]
            background: colorGreen
            border: 1px solid colorGreen
            color: colorWhite
            transition(.5s)
            cursor: pointer

            &:hover
                border: 1px solid colorWhite





